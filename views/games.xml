<?xml version="1.0" encoding="utf-8"?>

<odoo>


    <!--Video games action-->
    <record id='video_games_action' model='ir.actions.act_window'>
        <field name="name">Video Games</field>
        <field name="res_model">movie</field> 
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first entry!
                </p>
        </field>
    </record>

    <record id="video_games_form" model="ir.ui.view">
        <field name="name">movie_rental.movie.form</field>
        <field name="type">form</field>
        <field name="model">movie</field>
        <field name="arch" type="xml">
            <form string="Video Games">
                <sheet>
                    <group>
                        <group col="2" name="video_game_details" string="Video Game details">
                            <field name="movie_title"/>
                            <field name="movie_genre"/>
                        </group>
                        <group name="rental_details" string="Rental Details">
                            <field name="movie_num_copies"/>
                            <field name="movie_availability"/>  
                        </group>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>
    <!--Video games menu items-->
    <menuitem
        id="video_games_base_menu"
        name="Video Games"
        parent="movie_base_menu"
        action="video_games_action"
    />
    
    <menuitem
        id="PS4_base_menu"
        name="PS4"
        parent="video_games_base_menu"
        action="video_games_action"
    />
    <menuitem
        id="XBOX_base_menu"
        name="XBOX ONE"
        parent="video_games_base_menu"
        action="video_games_action"
    />
    <menuitem
        id="Nintendo_Switch_base_menu"
        name="Nintendo Switch"
        parent="video_games_base_menu"
        action="video_games_action"
    />
    <menuitem
        id="PC_base_menu"
        name="PC Gaming"
        parent="video_games_base_menu"
        action="video_games_action"
    />


</odoo>